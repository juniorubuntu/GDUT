{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading text-center">
            <h1 class="panel-title">Ajouter une application</h1>
        </div>
        {{ form_start(form) }}


        <div class="login-wrap col-md-12" style="input{ margin-top: 12%}">
            {# <p>Informations personnelles</p> #}
            {#
            {{ form_widget(form) }}
            #}
            <br>
            <div class="col-md-6 col-md-offset-3">

                {{ form_errors(form) }}

                {{ form_label(form.nom, "Nom de l'application") }}
                {{ form_widget(form.nom, {'attr':{'class':'form-control', 'placeholder': 'Ex: GDUT', 'style': 'background: ; color: black;margin-bottom: 35px;'}}) }}

                {{ form_label(form.categorie, "Catégorie") }}
                {{ form_widget(form.categorie, {'attr':{'class':'', 'style':'margin-bottom: 35px;'}}) }}

                {{ form_label(form.description, "Description") }}
                {{ form_widget(form.description, {'attr':{'class':'form-control', 'placeholder': 'Ex: Application de gestion des demandes utilisateurs', 'style': 'background: ; color: black;margin-bottom: 35px;'}}) }}

            </div>
        </div>
        <div class="col-md-6 col-md-offset-3">
            <button type="submit" class="btn col-md-2 btn-custom btn-primary btn-rounded waves-effect waves-lightr" value="">Ajouter</button>
            {{ form_end(form) }}
            <a class="btn btn-danger col-md-offset-6 btn-custom btn-inverse btn-rounded waves-effect waves-lightr" href="{{ path('typedemande_index') }}">Retourner à la liste</a>
        </div>
    </div>
    <script>
        document.getElementById('demandebundle_application_categorie_1').style.marginLeft = '40px';

        document.getElementById('demandebundle_application_categorie_0').style.marginRight = '8px';
        document.getElementById('demandebundle_application_categorie_0').style.cursor = 'pointer';

        document.getElementById('demandebundle_application_categorie_1').style.marginRight = '8px';
        document.getElementById('demandebundle_application_categorie_1').style.cursor = 'pointer';
    </script>
{% endblock %}
