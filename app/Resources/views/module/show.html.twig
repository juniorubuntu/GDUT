{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-border panel-custom" style="background: #ebeff2">
            <header class="panel-heading">
                <h1 class="panel-title">Détail sur un module</h1>
        </div>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ module.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ module.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ module.description }}</td>
                </tr>
                <tr>
                    <th>Actif</th>
                    <td>{% if module.actif %}Yes{% else %}No{% endif %}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('module_index') }}">Retourner à la liste</a>
        {#
            <ul>
                <li>
                    <a href="{{ path('module_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('module_edit', { 'id': module.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        #}
    {% endblock %}
