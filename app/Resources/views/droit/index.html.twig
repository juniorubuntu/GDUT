{% extends 'base.html.twig' %}

{% block content -%}
    <h2>Liste des droits</h2>

    <table class="records_list table table-hover panel panel-color panel-custom table-bordered">
        <thead class="panel-heading">
            <tr>
                <th class="">Id</th>
                <th class="">Nom du privillège(Droit)</th>
                <th class="">Ayant(s) droit</th>
                <th class="">Description</th>
                <th class="">Détails</th>
                <th class="">Modifier</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('droit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity }}</td>
                    <td><b>{{ entity.membreDuDroit }}</b></td>
                    <td>{{ entity.description }}</td>
                    <td>
                        <a href="{{ path('droit_show', { 'id': entity.id }) }}">show</a>
                    </td>
                    <td>
                        <a href="{{ path('droit_edit', { 'id': entity.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('droit_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
